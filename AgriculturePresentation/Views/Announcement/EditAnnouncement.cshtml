@model Announcement

@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.AnnouncementID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input asp-for="Title" type="text" class="form-control" placeholder="Başlık Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input asp-for="Date" type="date" class="form-control" placeholder="Tarih Giriniz">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="Bir Açıklama Giriniz"></textarea>
                </div>

                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>







