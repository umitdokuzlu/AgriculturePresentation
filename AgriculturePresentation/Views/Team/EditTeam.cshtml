@model Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Bilgi Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.TeamID)
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input asp-for="PersonName" type="text" class="form-control" id="exampleInputName1" placeholder="Ad Soyad">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputEmail3" placeholder="Görev">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input asp-for="ImageUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel Yolu">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook</label>
                    <input asp-for="FacebookUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Facebook Linkini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram</label>
                    <input asp-for="InstagramUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Instagram Linkini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Twitter</label>
                    <input asp-for="TwitterUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Twitter Linkini Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Web Sitesi</label>
                    <input asp-for="WebsiteUrl" type="text" class="form-control" id="exampleInputEmail3" placeholder="Varsa Websitesi Linkini Ekleyiniz">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

