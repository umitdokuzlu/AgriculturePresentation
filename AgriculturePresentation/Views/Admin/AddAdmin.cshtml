@model Admin

@{
    ViewData["Title"] = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Admin Girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kullanıcı Adı</label>
                    <input asp-for="UserName" type="text" class="form-control" placeholder="Başlık Giriniz">
                </div>
                 <div class="form-group">
                    <label for="exampleInputName1">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Başlık Giriniz">
                </div>

                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>







