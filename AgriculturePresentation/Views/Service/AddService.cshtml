@model ServiceAddViewModel
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni hizmet kaydı</h4>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        <input asp-for="Title" type="text" class="form-control" id="exampleInputName1" placeholder="Başlık">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Görsel</label>
                        <input asp-for="Image" type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                    </div>
                    <button asp-controller="Service" asp-action="AddService" type="submit" class="btn btn-outline-info">Kaydet</button>
                </form>
            </div>
        </div>
    </div>

