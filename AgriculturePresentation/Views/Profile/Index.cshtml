@model UserEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Mail Adresi</label>
                    <input asp-for="Mail" type="text" class="form-control" id="exampleInputName1" placeholder="Mail adresini giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Telefon Numarası</label>
                    <input asp-for="Phone" type="text" class="form-control" id="exampleInputEmail3" placeholder="Telefon numarasını giriniz">
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input asp-for="Password" type="text" class="form-control" id="exampleInputEmail3" placeholder="Yeni Şifre">
                </div>
                <div class="form-group">
                    <label>Şifre Tekrar</label>
                    <input asp-for="ConfirmPassword" type="text" class="form-control" id="exampleInputEmail3" placeholder="Yeni Şifre tekrar">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

